---
import "../styles/global.css";

const { title = "Redžo Efendić — Portfolio", description = "Portfolio" } = Astro.props;
---

<html lang="en" class="antialiased">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href={`${Astro.site?.pathname ?? ""}/favicon.png`} />
  </head>
  <body class="bg-blue-100 text-slate-900 dark:bg-slate-900 dark:text-slate-100">
    <header class="max-w-5xl mx-auto px-4 py-6 flex items-center justify-between">
      <a href="/my-portfolio/" class="font-semibold text-lg">Home</a>
      <nav class="flex gap-4 text-sm items-center">
        <a href="/my-portfolio/projects" class="font-semibold text-lg">Projects</a>
        <a href="/my-portfolio/contact" class="font-semibold text-lg">Contact</a>
        <a href="/my-portfolio/about" class="font-semibold text-lg">About Me</a>
        <slot name="theme" />
      </nav>
    </header>

    <main class="max-w-5xl mx-auto px-4 pb-16">
      <slot />
    </main>

    <footer class="max-w-5xl mx-auto px-4 py-10 text-sm opacity-70">
      © {new Date().getFullYear()} Redžo Efendić
    </footer>
  </body>
</html>
