---
const { project } = Astro.props;
---

<article class="rounded-2xl border p-4 hover:shadow transition">
 
  {project.image && (
    <a href={`/projects/${project.slug}`}>
      <img 
        src={project.image} 
        alt={project.title} 
        class="rounded-lg mb-3 w-full object-cover h-40 hover:opacity-90 transition" 
        loading="lazy" 
      />
    </a>
  )}

  <h3 class="text-lg font-semibold">
    <a href={`/projects/${project.slug}`} class="hover:underline">
      {project.title}
    </a>
  </h3>

  <p class="mt-1 text-sm opacity-80">{project.description}</p>

  <div class="flex flex-wrap gap-2 mt-3 text-xs">
    {project.tech?.map((t: string) => (
      <span class="px-2 py-1 rounded-full border">{t}</span>
    ))}
  </div>

  <div class="mt-4 flex gap-3 text-sm">
    <a href={project.url} target="_blank" rel="noopener" class="underline">
      Repo / Live
    </a>
    <a href={`/projects/${project.slug}`} class="text-blue-600 hover:underline">
      Details â†’
    </a>
  </div>
</article>
