---
// props: project
const { project } = Astro.props;
---
<article class="rounded-2xl border p-4 hover:shadow transition">
  {project.image && <img src={project.image} alt={project.title} class="rounded-lg mb-3 w-full object-cover h-40" loading="lazy" />}
  <h3 class="text-lg font-semibold">{project.title}</h3>
  <p class="mt-1 text-sm opacity-80">{project.description}</p>
  <div class="flex flex-wrap gap-2 mt-3 text-xs">
    {project.tech?.map((t: string) => (
  <span class="px-2 py-1 rounded-full border">{t}</span>
))}

  </div>
  <div class="mt-4 flex gap-3">
    <a class="text-sm underline" href={project.url} target="_blank" rel="noopener">Repo / Live</a>
    <a class="text-sm" href={`/projects/${project.slug}`}>Details</a>
  </div>
</article>
