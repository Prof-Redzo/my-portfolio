---
import Layout from "../../layouts/Layout.astro";
import { projects } from "../../data/projects";

const { slug } = Astro.params;
const project = projects.find((p) => p.slug === slug);

if (!project) {
  throw new Error(`Project not found for slug: ${slug}`);
}
---

<Layout>
  <section class="py-16 max-w-3xl mx-auto">
    <h1 class="text-4xl font-bold mb-4">{project.title}</h1>
    <p class="text-lg opacity-80 mb-6">{project.description}</p>

    {project.image && <img src={project.image} alt={project.title} class="rounded-lg shadow mb-6" />}

    <h2 class="text-xl font-semibold mb-2">Technologies</h2>
    <ul class="list-disc list-inside mb-6">
      {project.tech?.map((t) => <li>{t}</li>)}
    </ul>

    <a href={project.url} target="_blank" class="text-blue-600 hover:underline">
      View on GitHub â†’
    </a>
  </section>
</Layout>
