---
import Layout from "../../layouts/Layout.astro";
import { projects } from "../../data/projects";

const { slug } = Astro.params;
const project = projects.find((p) => p.slug === slug);

if (!project) {
  throw new Error(`Project not found: ${slug}`);
}
---

<Layout title={`${project.title} | Redžo Efendić`} description={project.description}>
  <h1 class="text-3xl font-bold mb-4">{project.title}</h1>
  {project.image && <img src={project.image} alt={project.title} class="rounded-lg mb-4 w-full max-h-80 object-cover" />}
  <p class="mb-4">{project.description}</p>
  <div class="flex gap-2 flex-wrap">
    {project.tech?.map((t) => <span class="px-3 py-1 border rounded-full text-sm">{t}</span>)}
  </div>
  <a href={project.url} target="_blank" class="inline-block mt-6 px-4 py-2 bg-blue-600 text-white rounded-lg">View Project</a>
</Layout>
